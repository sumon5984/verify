# Use Node.js 22 as base image
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all source files
COPY . .

# Expose port (optional â€” only if your bot or API listens on a port)
EXPOSE 3000

# Start the app using npm start (which runs PM2)
CMD ["npm", "start"]